{
  "manifest_version": 2,
  "name": "Google Translate",
  "short_name": "Google Translate",
  "description": "A native Google Translate standalone webview app for your Chrome Browser.",
  "version": "0.1",
  "minimum_chrome_version": "38",
  "permissions": [ "webview", "audioCapture", "videoCapture", "http://*/", "https://*/" ],
  "icons": {
    "16": "assets/16.png",
    "32": "assets/32.png",
    "64": "assets/64.png",
    "128": "assets/128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
